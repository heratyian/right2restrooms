<% if favorite %>
  <%= form_with(model: favorite, url: bathroom_favorite_path(favorite.bathroom, favorite), method: :delete, local: true) do |form| %>
    <%= form.hidden_field :bathroom_id, value: @bathroom.id %>
    <%= form.hidden_field :user_id, value: user_id %>
    <%= form.submit "Unfavorite" %>
  <% end %>
<% else %>
  <%= form_with(model: Favorite.new, url: bathroom_favorites_path(@bathroom), local: true) do |form| %>
    <%= form.hidden_field :bathroom_id, value: @bathroom.id %>
    <%= form.hidden_field :user_id, value: user_id %>
      <%= form.submit "Favorite"%>
  <% end %>
<% end %>
